<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="de.tu_darmstadt.epool.pfoertneradmin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:name=".AdminApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_pfoertneradmin"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_pfoertneradmin"
        android:supportsRtl="true"
        android:theme="@style/PfoertnerLight">
        <activity android:name=".SpionActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".PictureUpload" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".InitActivity" />
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <activity android:name=".JoinOfficeActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".showQRCodeActivity" />

        <service
            android:enabled="true"
            android:name="ProcessAppointmentRequest">
            <intent-filter>
                <action android:name="AcceptAppointmentRequest" />
                <action android:name="DeclineAppointmentRequest" />
            </intent-filter>
        </service>

        <activity android:name=".AppointmentActivity" />

        <service android:name="de.tu_darmstadt.epool.pfoertner.common.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:enabled="true"
            android:name="de.tu_darmstadt.epool.pfoertner.common.SyncService"/>
        <receiver android:name=".BootDeviceReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
