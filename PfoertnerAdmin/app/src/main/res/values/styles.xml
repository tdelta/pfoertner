    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle" parent="Theme.AppCompat.NoActionBar">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="PfoertnerLight" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorPrimaryDark">@color/pfoertner_light_primary_dark</item>
        <item name="android:colorPrimary">@color/pfoertner_light_primary</item>
        <item name="android:colorAccent">@color/pfoertner_light_accent</item>
        <item name="android:textColorPrimary">@color/pfoertner_light_primary_text</item>
        <item name="android:textColorSecondary">@color/pfoertner_light_secondary_text</item>
        <item name="colorPrimary">@color/pfoertner_light_primary</item>
        <item name="colorPrimaryDark">@color/pfoertner_light_primary_dark</item>
        <item name="colorAccent">@color/pfoertner_light_accent</item>
    </style>

    <style name="PfoertnerLight.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/pfoertner_light_primary</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>
